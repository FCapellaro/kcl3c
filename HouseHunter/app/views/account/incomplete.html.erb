<div class="account-content">
	<div id="account-sidebar">
		<ul>
            <li>
                <%= link_to account_create_path do %>
                    <h1>Create Listings</h1>
                <% end %>
            </li>
            <li class="sidebar-selected">
                <h1>Incomplete Listings</h1>
            </li>
            <li>
                <%= link_to account_active_path do %>
                    <h1>Active Listings</h1>
                <% end %>
            </li>
            <li>
                <%= link_to account_inactive_path do %>
                    <h1>Inactive Listings</h1>
                <% end %>
            </li>
            <li>
                <%= link_to account_details_path do %>
                    <h1>Details</h1>
                <% end %>
            </li>
		</ul>
	</div>

	<div class="account-right">
		<h1>Incomplete Listings</h1>
		<div class="divider-bar"></div>
		<div class="account-subheading"> Below are all of your incomplete listings. Select a section or press Finish to complete listing. </div>

		<% @properties.each do |p| %>

			<div class="account-listing">
				<div class="front-house-image">
					<img src="http://placehold.it/350x200">
				</div>

				<div class="property-name">
					<% if p.address != nil and p.address.house_name_number != nil then %>
						<h2><%= p.address.house_name_number %>, <%= p.address.address_line_1 %>, <%= p.address.town_city %>, <%= p.address.post_code %></h2>
					<% else %>
						<h2>No Address</h2>
					<% end %>
				</div>

				<ul class="progress">
					<li class="wizard-section-complete"> Address </li>
					<li class="wizard-section-complete"> General Information </li>
					<li class="wizard-section-complete"> Outdoor Spaces </li>
					<li class="wizard-section-complete"> Parking </li>
					<li class="wizard-section-complete"> Heating </li>
					<li class="wizard-section-incomplete"> Rooms </li>
					<li class="wizard-section-incomplete"> Key Features </li>
					<li class="wizard-section-incomplete"> Description </li>
				</ul>

	            <%= link_to edit_listing_path(p) do %>
					<input type="submit" name"hide" value="Finish" id="next-step">
				<% end %>
			</div>

		<% end %>
	</div>
</div>