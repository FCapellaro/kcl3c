<div class="account-content">
	<div id="account-sidebar">
		<ul>
            <li>
                <%= link_to account_create_path do %>
                    <h1>Create Listings</h1>
                <% end %>
            </li>
            <li>
                <%= link_to account_incomplete_path do %>
                    <h1>Incomplete Listings</h1>
                <% end %>
            </li>
            <li>
                <%= link_to account_active_path do %>
                    <h1>Active Listings</h1>
                <% end %>
            </li>
            <li>
                <%= link_to account_inactive_path do %>
                    <h1>Inactive Listings</h1>
                <% end %>
            </li>
            <li class="sidebar-selected">
                <h1>Details Listings</h1>
            </li>
		</ul>
	</div>

	<div class="account-right" id="account-right-details">
		<h1>My Details</h1>
		<div class="divider-bar"></div>
		    <div class="account-subheading"> Feel free to edit your personal details, and let us know how you prefer to be contacted. </div>
                <fieldset>
        			<div class="form-control-group">
                       <span class="fontawesome-user"><i class="fa fa-user"></i></span>
                        <input class="icon-input" type="text" id="first-name" name="first-name" placeholder="First Name">
                    </div>
                    <div class="form-control-group">
                        <span class="fontawesome-user"><i class="fa fa-user"></i></span>
                        <input class="icon-input" type="text" id="last-name" name="last-name" placeholder="Last Name">
                    </div>
        			<div class="form-control-group">
                        <span class="fontawesome-user"><i class="fa fa-at"></i></span>
                        <input class="icon-input" type="text" id="email" name="email" placeholder="Email Address">
                    </div>
                    <div class="form-control-group">
                        <span class="fontawesome-user"><i class="fa fa-mobile"></i></span>
                        <input class="icon-input" type="text" id="mobile-number" name="mobile-number" placeholder="Mobile Number">
                    </div>
                    <div class="form-control-group">
                        <%= link_to account_details_edit_path do %>
                            <input type="submit" name"edit" value="Edit details">
                        <% end %>
                	</div>
                </fieldset>
    	   </div>
		</div>
	</div>
</div>