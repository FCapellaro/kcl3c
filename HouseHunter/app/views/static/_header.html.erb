<header>
    <div id="header-top-container">
        <div id="header-top">
            <div class="float-left" id="user-profile-link">
                <a href="#">Home Hunter</a>
            </div>

            <div class="float-right" id="user-control">
                <% if signed_in? %>
                    <% if current_user.first_name == nil or current_user.last_name == nil %>
                        <a href="#"><%= current_user.email %></a> |
                    <% else %>
                        <a href="#"><%= current_user.first_name + " " + current_user.last_name %></a> |
                    <% end %>
                    
                    <a href="#" onclick="document.cookie='remember_token=; expires=Thu, 01 Jan 1970 00:00:01 GMT;';document.location='/'">Log Out</a>
                <% else %>
                    <%= link_to "Login", sign_in_path %> |
                    <%= link_to "Register", sign_up_path %>
                <% end %> 
                
            </div>
        </div>
    </div>

    <div id="nav-container">
        <div id="nav">
            <div id="logo">
                <a href="index.html">
                    <%= image_tag "Logo.jpg", class: "logo", alt: "Logo" %>
                </a>
            </div>

            <div id="header-link-container">

                <a href="account-wizard.html">
                    <div class="links-col">
                        My Account
                    </div>
                </a>

                <%= link_to how_it_works_path do %>
                    <div class="links-col">
                        How it Works
                    </div>
                <% end %>

                <%= link_to fees_path do %>
                    <div class="links-col">
                        Fees
                    </div>
                <% end %>

                <%= link_to advice_path do %>
                    <div class="links-col">
                        Advice
                    </div>
                <% end %>

                <%= link_to faq_path do %>
                    <div class="links-col">
                        FAQs
                    </div>
                <% end %>
            </div>

            <!--Menu for small window here-->
            <div id="menu-top">
                <a href="#" class="menu">â‰¡ <span>Menu</span></a>
            </div>

        </div>
    </div>
</header>

